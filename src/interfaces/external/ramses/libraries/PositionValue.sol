            positionManager,
            tokenId,
            sqrtRatioX96
        );
        (uint256 amount0Fee, uint256 amount1Fee) = fees(
            positionManager,
            tokenId
        );
        return (amount0Principal + amount0Fee, amount1Principal + amount1Fee);
    }

